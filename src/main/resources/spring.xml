<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="Denis Borisenko"/>
    </bean>

    <bean id="eventLogger"
          class="ConsoleEventLogger"/>
    <bean id="dateTimeFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
    <bean id="event" scope="prototype"
          class="Event">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateTimeFormat"/>

    </bean>

    <bean id="app"
          class="App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

</beans>